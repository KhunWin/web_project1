<!doctype html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title><%= title %></title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    </head>

    <body>

        <div class="container-fluid">
            <div class="navbar row py-2 align-items-center">
                <div class="logo col-md-auto">Navbar</div>
                <ul class="nav col-md">
                    <li class="nav-item">
                        <a class="nav-link text-muted" href="/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/event">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-muted" href="/become/volunteer">Become volunteer</a>
                    </li>
                </ul>
        </div>

        <div class="container mt-4">
        <form action="/event/new" method="POST">

            <div class="row">
                <div class="col-6">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Event title</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="eventTitle" id="eventtitle" required>
                    </div>
                    <div class="col-sm-10">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Organizer</label>
                        <input type="text" class="form-control" name="organizerName" id="organizer" required>
                    </div>
                    <div class="col-sm-10">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Datetime</label>
                        <input id="datetimeInput" type="datetime-local" name="eventDate" class="form-control" required>

                    </div>
                    <div class="col-sm-10">
                        <label for="inputLocation" class="col-sm-2 col-form-label">Location</label>
                        <input id="eventLocation" type="text" name="location" class="form-control" required>
                    
                    </div>
                </div>
                
                <div class="col-6">
                    <label for="exampleFormControlTextarea1">Description</label>
                    <textarea class="form-control" id="descriptionForm" name="eventDesc" rows="5" required></textarea>

                    <label for="inputPassword3" class="col-sm-2 col-form-label">Quota</label>
                    <input type="number" class="form-control" name="quotaNum" id="quotaNum" required>

                    <label for="inputPassword3" class="col-sm-2 col-form-label">Image</label>
                    <input type="url" class="form-control" name="imageURL" id="imageURL" required>

                </div>

                <div class="row mb-3">
                    <div class="offset-sm-0">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="terms" id="gridCheck1">
                            <label class="form-check-label" for="gridCheck1">
                                Highlight
                            </label>
                        </div>
                    </div>
                </div>

            
            <button type="submit" class="btn btn-primary">Save</button>
            
        </form>
        </div>

    </body>


</html>